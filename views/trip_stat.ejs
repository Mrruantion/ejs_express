                    <input type="button" value="导出" target="derive" />
                </div>

            </div>
        </div>
    </div>

</body>
<script type="text/javascript">
    $(function () {
        $(".datepicker").datetimepicker({
            language: "zh-CN",
            autoclose: true,//选中之后自动隐藏日期选择框
            format: "yyyy-mm-dd",//日期格式
            minView: 2
        });
    });
</script>

